<table class="digits">
  <tr>
    <th><div><h1>0</h1></div></th>
    <th><div><h1>1</h1></div></th>
    <th><div><h1>2</h1></div></th>
    <th><div><h1>3</h1></div></th>
    <th><div><h1>4</h1></div></th>
    <th><div><h1>5</h1></div></th>
  </tr>
</table>

<div style="margin-left: 14px">
  <div class="progress range_progress">
    <div class="progress-bar" id="<%= @id_name %>_progressbar" style="width: <%= @progress_width %>%" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="5"></div>
  </div>
</div>

<br>

<script>
  document.getElementById('<%= @id_name %>_progressbar').classList.add('progress_<%= @progress_value %>');
</script>