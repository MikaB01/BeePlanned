<%= javascript_include_tag "location", "data-turbolinks-track" => true  %>

<div class="wrapper">
  <header>
    <%= render 'nav' %>
    <div style="height: 300px"></div>
    <div style="text-align: center">

      <div id="show_location_comp">

        <%= image_tag 'big_honeycomb3.png', id: 'img_show_location', class: 'zoomed'%>

        <div id="show_location_table" class="transparent">

          <h1 class="h3 mb-3 font-weight-normal", style="text-decoration: underline"><%= @location.name %></h1>

          <table class="separate" id="show_table">

            <tr>
              <td>Country:</td>
              <td><%= @location.country %></td>
              <td>State:</td>
              <td><%= @location.state %></td>
            </tr>

            <tr>
              <td>Street:</td>
              <td><%= @location.street %></td>
              <td>Nr:</td>
              <td><%= @location.street_number %></td>
            </tr>

            <tr>
              <td>Zip:</td>
              <td><%= @location.zip_code %></td>
              <td>City:</td>
              <td><%= @location.city %></td>
            </tr>

            <% if @location.latitude. && @location.longitude %>
              <tr>
                <td>Latitude:</td>
                <td><%= @location.latitude %></td>
                <td>Longitude:</td>
                <td><%= @location.longitude %></td>
              </tr>
            <% end %>

          </table>

        </div>

      </div>

    </div>
  </header>
</div>