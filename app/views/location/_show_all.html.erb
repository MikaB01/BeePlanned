
<div id="show_all_location_comp">

  <%= image_tag 'big_honeycomb3.png', id: 'img_show_all_location'%>
  <div id="show_all_location_heading" class="show shown">
    <h3> Show all </h3>
    <h3> Locations </h3>
    <i class="fa fa-eye fa-2x"></i>
  </div>


  <div class="hide hidden" id="show_all_location_table" style="align: center">
    <div style="margin-bottom: 20px">
      <i class="fa fa-times-circle fa-lg" id="close_show_all_table"></i>
    </div>

    <table class="separate" id="show_all_table" style="margin-top: -30px; margin-left: -14px">


      <tr class="top" id="show_all_location_table_th">
        <th>Name</th>
        <th>Country</th>
        <th>State</th>
      </tr>


      <% @locations.each do |location| %>

        <% if location.country && location.state %>
          <tr onclick="location.href= '<%= location_path(location.id) %>'" class="location_table_cell reset_all">
            <td><%= location.name %></td>
            <td><%= location.country %></td>
            <td><%= location.state %></td>
          </tr>
        <% end %>

      <% end %>

      <% @coordinates_table_shown = false %>

      <% @locations.each do |location| %>
        <% if (location.latitude && location.longitude) && (!location.country && !location.state)%>
          <% @coordinates_table_shown = true %>
        <% end %>
      <% end %>

      <% if @coordinates_table_shown %>
        <tr class="top" id="show_all_location_table_th">
          <th>Name</th>
          <th>Latitude</th>
          <th>Longitude</th>
        </tr>
      <% end %>

      <% @locations.each do |location| %>

        <% if (location.latitude && location.longitude) && (!location.country && !location.state)%>
          <tr onclick="location.href= '<%= location_path(location.id) %>'" class="location_table_cell reset_all">
            <td><%= location.name %></td>
            <td><%= location.latitude %></td>
            <td><%= location.longitude %></td>
          </tr>
        <% end %>

      <% end %>

    </table>

  </div>

</div>

