<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-password">
    <h1 class="h3 mb-3 font-weight-normal">Forgot your password?</h1>

    <label for="inputEmail" class="sr-only">Email address</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email address', type: 'email' %>


    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'btn btn-lg btn-primary btn-block', type: 'submit' %>
    </div>

    <br>

    <%= render "users/shared/links" %>

  </div>

<% end %>

