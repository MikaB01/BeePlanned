<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-signin">
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

    <label for="inputEmail" class="sr-only">Email address</label>
    <%= f.text_field :login, autofocus: true, autocomplete: "login", class: 'form-control', placeholder: 'Email or Username', type: 'text' %>

    <label for="inputPassword" class="sr-only">Password</label>
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Password', type: 'password', id: 'password_signin' %>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3">
        <label>
          <%= f.check_box :remember_me, type: 'checkbox', value:'remember-me' %>
          <%= f.label :remember_me %>
        </label>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Sign in", class: 'btn btn-lg btn-primary btn-block', type: 'submit' %>
    </div>

    <br>

    <%= render "users/shared/links" %>

  </div>

<% end %>

