<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-signup">
    <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>

    <label for="inputEmail" class="sr-only">Username</label>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'form-control', placeholder: 'Username', type: 'text' %>

    <label for="inputUsername" class="sr-only">Email address</label>
    <%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: 'Email address', type: 'email' %>

    <label for="inputPassword" class="sr-only">Password</label>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "Password   (#{@minimum_password_length} characters minimum)".html_safe, type: 'password' %>

    <label for="inputPassword" class="sr-only">Confirm password</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Confirm password', type: 'password' %>

    <div class="checkbox mb-3">
      <label>
        <%= f.check_box :remember_me, type: 'checkbox', value:'remember-me' %>
        <%= f.label :remember_me %>
      </label>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block', type: 'submit' %>
    </div>

    <br>

    <%= render "users/shared/links" %>

  </div>

<% end %>


